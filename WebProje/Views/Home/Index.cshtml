@model List<WebProje.Models.Category>
@{
    ViewBag.Title = "Home Page";
}

<!-- home section starts  -->

@foreach (var index in Model)
{
    <section class="home" id="home">
        <div class="row">

            <div class="content">
                <h3>@index.Home.HomeFirsTitle <span>@index.Home.HomeLastTitle</span></h3>
                <a href="#courses" class="btn">Kurs Seç</a>
            </div>

            <div class="image">
                <img src="~/Content/Core/images/homg-img.svg" alt="">
            </div>

        </div>
    </section>

    <!-- home section ends -->
    <!-- couter section stars  -->

    <section class="count">
        <div class="box-container">

            <div class="box">
                <i class="fas fa-graduation-cap"></i>
                <div class="content">
                    <h3>150+</h3>
                    <p>Kurslar</p>
                </div>
            </div>

            <div class="box">
                <i class="fas fa-user-graduate"></i>
                <div class="content">
                    <h3>1300+</h3>
                    <p>Öğrenciler</p>
                </div>
            </div>

            <div class="box">
                <i class="fas fa-chalkboard-user"></i>
                <div class="content">
                    <h3>80+</h3>
                    <p>öğretmenler</p>
                </div>
            </div>
        </div>
    </section>

    <!-- couter section ends -->
    <!-- about section starts  -->

    <section class="about" id="about">

        <div class="row">

            <div class="image">
                <img src="~/Content/Core/images/about-img.svg" alt="">
            </div>

            <div class="content">
                <h3>neden bizi seçmelisiniz?</h3>
                <p>
                    Kurumumuz, uygulanan yüksek kalite standartları sayesinde; 2011 Yılı Avrupa Birliği Kalite Ödülünü, 2010-2011-2012 Yılları,
                    üç yıl üst üste, Tüketici Kalite Ödüllerini almaya hak kazanmış ilk ve tek dil okuludur. 2015 yılında ise dünyadaki en iyi eğitim
                    kurumu ödülü olan 2015 World Quality Award ödülünü almıştır.
                </p>
                <a href="#contact" class="btn">iletişim kur</a>
            </div>

        </div>

    </section>

    <!-- about section ends -->

    <section class="courses" id="courses">

        <h1 class="heading">Aktif <span>Kurslarımız</span></h1>

        <div class="swiper course-slider">

            <div class="swiper-wrapper">

                <div class="swiper-slide slide">
                    <img src="~/Content/Core/images/course-1.svg" alt="">
                    <h3>Web Geliştirme</h3>
                    <p>Sıfırdan ileri seviyeye 'Web Geliştirme': Html, Css, Bootstrap, Javascript, Asp.Net Core ve WebApi</p>
                    <a href="#courses" class="btn">kursu seç</a>
                </div>

                <div class="swiper-slide slide">
                    <img src="~/Content/Core/images/course-2.svg" alt="">
                    <h3>sosyal medya yönetimi</h3>
                    <p>Burada tüm sosyal medya sitelerinde profesyonel hesap yönetmeyi ve reklam çalışmaları yürütmeyi öğreneceksin</p>
                    <a href="#courses" class="btn">kursu seç</a>
                </div>

                <div class="swiper-slide slide">
                    <img src="~/Content/Core/images/course-3.svg" alt="">
                    <h3>kimya ve biyoloji</h3>
                    <p>özel ders tadında kimya ve biyoloji dersini slmsk idtersen biz burdayız ve seni beliyoruz</p>
                    <a href="#courses" class="btn">kursu seç</a>
                </div>

                <div class="swiper-slide slide">
                    <img src="~/Content/Core/images/course-4.svg" alt="">
                    <h3>grafik tasarım</h3>
                    <p>Photoshop, illustrator ve indesign programlarını etkili ve kısa sürede öğrenerek tasarım yapmaya hazır mısın ?</p>
                    <a href="#courses" class="btn">kursu seç</a>
                </div>

                <div class="swiper-slide slide">
                    <img src="~/Content/Core/images/course-5.svg" alt="">
                    <h3>İngilizce</h3>
                    <p>Platform üzerindeki ''En Sistemli'' İngilizce Kursu ile ''Özel ders alır gibi'' İngilizce öğrenin, anlayın ve konuşun!</p>
                    <a href="#courses" class="btn">kursu seç</a>
                </div>

                <div class="swiper-slide slide">
                    <img src="~/Content/Core/images/course-6.svg" alt="">
                    <h3>Backend Geliştirme</h3>
                    <p>C# ile Nesne Yönelimli Programlama ve C# Veritabanı Otomasyon Yazılımları Geliştirmeyi C# Projesi Yaparak Öğrenin</p>
                    <a href="#courses" class="btn">kursu seç</a>
                </div>

            </div>

            <div class="swiper-pagination"></div>
        </div>
    </section>

    <!-- courses section ends -->
    <!-- teachers section starts  -->

    <section class="teachers" id="teachers">
        <h1 class="heading">Uzman <span>Öğretmenler</span></h1>
        <div class="swiper teachers-slider">

            <div class="swiper-wrapper">

                <div class="swiper-slide slide">
                    <img src="~/Content/Core/images/tutor-1.png" alt="">
                    <div class="share">
