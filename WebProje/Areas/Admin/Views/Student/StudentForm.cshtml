@model WebProje.Models.Users

@{
    ViewBag.Title = "StudentForm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    .field-validation-error {
        color: red;
    }
</style>

<div class="content-wrapper">
    <div class="container">
        @using (Html.BeginForm("Kaydet", "Student", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {
            <table class="table table-hover bg-white">
                <tr>
                    <td>Ad Soyad</td>
                    <td>
                        @Html.TextAreaFor(m => m.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UserName)
                    </td>
                </tr>

                <tr>
                    <td>Ad Soyad</td>
                    <td>
                        @Html.TextAreaFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        @Html.HiddenFor(m => m.Id)
                        <input type="submit" value="Kaydet" class="btn btn-primary" />
                    </td>
                </tr>

            </table>
        }

    </div>

</div>

